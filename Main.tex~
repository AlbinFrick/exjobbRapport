% Adding glossery to report
\usepackage[acronym]{glossaries}
\makeglossaries
\newglossaryentry{element}
{
    name=element,
    description={ Design elements are the fundamentals to all designs: form, shape, line, texture, color, space, movement. }
}
 
\newglossaryentry{component}
{
    name=component,
    description={ A set of elements aranged in a destinct layout }
}


\newglossaryentry{div-tag}
{
    name=div,
    description={ A <div> tag defines a division or a section in an HTML document. The <div> tag is used as a container for HTML elements, where any content is aloud. }
}


\newglossaryentry{p-tag}
{
    name=ptag,
    description={ A <p> tag defines a division or a section in an HTML document. The <div> tag is used as a container for HTML elements, where any content is aloud. }
}

\newacronym{html}{HTML}{ Hyper Text Markup Language - The standard markup language for creating Web pages }

\newacronym{css}{CSS}{ Cascading Style Sheets - Describes how HTML elements are to be displayed on screen, paper, or in other media }

\newacronym{gui}{GUI}{ Graphical User Interface }

\newacronym{dom}{DOM}{ Document Object Model - The interfaces and objects used to represent and manipulate a document }
\newacronym{svg}{SVG}{ Scalable Vector Graphics - Vector-based graphics for the Web. }
 

